<main class="p-5">
    <hr>
    <div class="row">
        <div class="nav">
            {{#with navigation}}
            {{#each links}}
            <div class="nav-item">
                <a href="{{href}}" class="nav-link {{#unless href includeZero=true}} disabled {{/unless}}"
                    target="_blank">{{text}}</a>
            </div>
            {{/each}}
            {{/with}}
        </div>
    </div>
    <hr class="pb-3">

    <div class="display-4 my-4">
        <h1>{{header}}</h1>
    </div>


    <div class="row">
        <div class="col-12">
            {{#with purchase}}

            <div class="col-12 mb-4">
                <div class="nav nav-tabs">
                    {{#each tabs}}
                    <div class="nav-item">
                        <a href="#" class="nav-link {{#if first}} active {{/if}}">{{this}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>

            <div class="row">
                {{#with actionBlock}}
                {{#with input}}
                <div class="col-4">
                    <input class="form-control" placeholder="{{placeholder}}">
                </div>
                {{/with}}
                <div class="col-8">
                    {{#each buttons}}
                    {{#if isSuccess}} <a href="{{link}}" class="btn btn-success" target="_blank">{{text}}</a> {{/if}}
                    {{#if isOutline}} <a href="{{link}}" class="btn btn-outline-success ms-3"
                        target="_blank">{{text}}</a>
                    {{/if}}
                    {{#if isDanger}} <a href="{{link}}" class="btn btn-outline-danger ms-3" target="_blank">{{text}}</a>
                    {{/if}}
                    {{/each}}
                </div>
                {{/with}}

                <hr class="my-4">

                {{> purchaseItem}}

                {{/with}}
            </div>
        </div>
    </div>
    <hr class="my-4">

    <div class="row">
        {{#with userInfo}}
        <div class="display-3 my-4">
            <h1>{{title}}</h1>
        </div>
        <div class="card my-3">
            {{#with profileData}}
            <h2 class="my-3">{{title}}</h2>

            <div class="card">
                <div class="row m-1">
                    {{#with fullName}}
                    <div class="col-4">
                        <p class="mb-0">{{surname.title}}</p>
                        <b>{{surname.value}}</b>
                    </div>

                    <div class="col-4">
                        <p class="mb-0">{{name.title}}</p>
                        <b>{{name.value}}</b>
                    </div>

                    <div class="col-4">
                        <p class="mb-0">{{middleName.title}}</p>
                        <b>{{middleName.value}}</b>
                    </div>
                </div>
                {{/with}}
            </div>

            <div class="card my-3">
                <div class="row m-1">
                    {{#with otherInfo}}
                    <div class="col-4">
                        <p class="mb-0">{{birthday.title}}</p>
                        <b>{{birthday.value}}</b>
                    </div>

                    <div class="col-4">
                        <p class="mb-0">{{sex.title}}</p>
                        <b>{{sex.value}}</b>
                    </div>

                    <div class="col-4">
                        <p class="mb-0">{{language.title}}</p>
                        <b>{{language.value}}</b>
                    </div>
                </div>
                {{/with}}
            </div>
            {{/with}}

            <div class="card mb-2">
                <div class="row">
                    {{#each buttons}}
                    {{#if isPrimary}} <a href="{{link}}" class="btn btn-primary col-3 mx-3"
                        target="_blank">{{text}}</a>{{/if}}
                    {{#if isSecondary}} <a href="{{link}}" class="btn btn-outline-secondary col-3 mx-5"
                        target="_blank">{{text}}</a>{{/if}}
                    {{#if isDanger}} <a href="{{link}}" class="btn btn-outline-danger col-3 mx-3"
                        target="_blank">{{text}}</a>{{/if}}
                    {{/each}}
                </div>
            </div>

        </div>

        <div class="card">
            {{#with recipients}}
            <h2 class="my-3">{{title}}</h2>

            <div class="row">
                {{#each users}}
                <div class="col-4">
                    <div class="card mb-2">
                        <b class="ms-3">{{name}}</b>
                        <p class="ms-3">{{phone}}</p>
                        {{#with button}}
                        <a href="{{link}}" target="_blank" class="btn btn-primary col-6 mb-2 ms-3">{{text}}</a>
                        {{/with}}
                    </div>
                </div>
                {{/each}}
            </div>

            {{/with}}
        </div>

        <div class="card mt-3">
            {{#with contacts}}
            <h2 class="my-3">{{title}}</h2>

            <div class="row">
                {{#each contactData}}
                <div class="col-4">
                    <div class="card mb-2">
                        <p class="ms-3 mb-1">{{title}}</p>
                        <b class="ms-3">{{value}}</b>
                        {{#with button}}

                        {{#if isPrimary}} <a href="{{link}}" target="_blank"
                            class="btn btn-primary col-6 mb-2 ms-3 mt-3">{{text}}</a> {{/if}}
                        {{#if isSecondary}} <a href="{{link}}" target="_blank"
                            class="btn btn-outline-secondary col-6 mb-2 ms-3 mt-3">{{text}}</a> {{/if}}
                        {{#if isDanger}} <a href="{{link}}" target="_blank"
                            class="btn btn-outline-danger col-6 mb-2 ms-3 mt-3">{{text}}</a> {{/if}}

                        {{/with}}
                    </div>
                </div>
                {{/each}}
            </div>

            {{/with}}
        </div>
        {{/with}}
    </div>










