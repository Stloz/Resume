{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <h1 class="p-5">{{name}}</h1>
    <p><em>Description: {{description}}</em></p>
    <p>Founder: {{history.founder}}, {{history.year}}.</p>
    <hr>

    <ul>
        <h2>Types:</h2>
        <ul>
            {{#each types}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </ul>
    <hr>

    
    <ul>
        <h2>Syntax:</h2>
        <ul>
            {{#with syntax}}
                <b>Variables:</b>
                <ul>
                    {{#each variables}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
                <hr>

                <b>Functions:</b>
                <ul>
                    {{#each functions}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
                <hr>

                <b>Conditionals:</b>
                <ul>
                    {{#each conditionals}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
                <hr>

                <b>Loops:</b>
                <ul>
                    {{#each loops}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
                <hr>

                <b>Classes:</b>
                <ul>
                    {{#each classes}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
                
            {{/with}}
        </ul>
    </ul>
    <hr>

    <ul>
        <h2>Features:</h2>
        <ul>
            {{#each features}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </ul>
    <hr>

    <ul>
        <h2>Libraries:</h2>
        <ul>
            {{#each libraries}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </ul>
    <hr>

    <ul>
        <h2>Tools:</h2>
        <ul>
            {{#each tools}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </ul>
    <hr>

     <ul>
        <h2>Community:</h2>
        <ul>
            {{#each community}}
                <li>{{name}} - <i>{{type}}</i></li>
            {{/each}}
        </ul>
    </ul>
    <hr>

</div>

