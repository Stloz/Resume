<main class="p-5">
    <hr>
    <div class="col-12">

        <div class="nav">
            {{#with navigation}}
            {{#each links}}
            <div class="nav-item">
                <a href="{{href}}" class="nav-link {{#if @last}} disabled {{/if}}" target="_blank">{{text}}</a>
            </div>
            {{/each}}
            {{/with}}
        </div>
    </div>
    <hr>

    <div class="row col-12">
        {{#with newsBlock}}
        <div class="display-3 pt-5 pb-4 text-center">
            {{title}}
        </div>

        {{#each cards}}
        <div class="col-3">
            <div class="card text-bg-dark mb-3">
                <div class="card-header">
                    <div>
                        {{title}}
                        {{#if isNew}} <span class="badge text-bg-success rounded-pill">New</span> {{/if}}
                        {{#if isTop}} <span class="badge text-bg-danger rounded-pill">Top</span> {{/if}}
                    </div>
                </div>
                <div class="card-body">
                    <p>{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
        {{/with}}
    </div>
    <hr>

    <div class="row col-12">
        <div>
            {{#with goodsBlock}}
            <div class="nav nav-tabs pt-5">
                {{#each tabs}}
                <div class="nav-item">
                    <a href="#" class="nav-link {{#if isActive}}active{{/if}} {{#if isDisabled}}disabled{{/if}}">
                        {{text}}
                    </a>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </div>

    <div class="row col-12 pt-4">
        {{#with goodsBlock}}
        {{#each cards}}
        <div class="col-4 pt-3">
            <div class="card text-bg-light">
                <img class="card-img-top" src="{{image}}">
                <div class="card-body">
                    <h5 class="card-title">
                        {{title}}
                        {{#if isHot}} <span class="badge text-bg-warning rounded-pill">Hot</span> {{/if}}
                        {{#if isNew}} <span class="badge text-bg-primary rounded-pill">New</span> {{/if}}
                    </h5>
                    <p>{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
        {{/with}}
    </div>
    <hr class="mt-5 mb-5">

    <div class="row col-12 pt-2">
        {{#with subscribe}}
        <div class="card text-bg-dark">
            <h2 class="m-3">{{header}}</h2>
            <p class="ms-3">{{description}}</p>
            {{#each buttons}}
            <a href="{{link}}" class="ms-3 mt-2 mb-3" target="_blank">
                <button class="btn btn-primary">{{text}}</button>
            </a>
            {{/each}}
        </div>
        {{/with}}
    </div>

    <hr class="mt-5 mb-5">

    <div class="row col-12 pt-2">
        {{#with service}}
        <div class="card text-bg-success text-center">
            <h2 class="m-3">{{title}}</h2>
            <p class="ms-3">{{description}}</p>
            {{#each buttons}}
            <a href="{{link}}" class="ms-3 mt-2 mb-3" target="_blank">
                <button class="btn btn-primary">{{text}}</button>
            </a>
            {{/each}}
        </div>
        {{/with}}
    </div>

    <hr class="mt-5 mb-4">

    <div class="row g-5">
        {{#each footer}}
        <div class="nav col-2">
            {{#each this}}
            <div>
                <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{link}}">{{text}}</a>
            </div>
            {{/each}}
        </div>
        {{/each}}
    </div>
</main>