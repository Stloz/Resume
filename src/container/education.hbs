{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="p-5">
	{{#with main}}
	<main>
		<section>
			{{> title data="My education" big=true }}
			<ul>
				{{#each educations}}
				<li>
					{{name}}

					{{#unless isEnd includeZero=true}}
					(ще в процесі)
					{{/unless}}
				</li>
				{{/each}}
			</ul>
		</section>

		<section>
			{{> title data="My certificates" big=false}}
			<ul>
				{{#each certificates}}
				<li>
					{{name}}

					{{#if id}} ({{id}}) {{/if}}
				</li>
				{{/each}}
			</ul>
		</section>
	</main>
	{{/with}}
</div>

