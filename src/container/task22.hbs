<main>
    {{#with page_header}}
        <div>
            <h1 class="text-center">{{title}}</h1>
        </div>

        <div>
            <p class="text-center">{{description}}</p>
        </div>
    {{/with}}

    {{#with section}}
        <div class="card">
                <div class="card-body">
                {{#with about_us}}
                    <div class="display-6 text-end">
                        {{title_list.main}}
                    </div>

                    <div class="text-end">
                        <h2>{{title_list.sub}}</h2>
                    </div>

                    <div>
                        <button type="button" class="btn btn-outline-info">{{button.text}}</button>
                    </div>
                {{/with }}
            </div>
        </div>

        {{#with advantage}}
            <div class="card">
                <div class="card-body">
                    <div class="display-5">
                        {{title}}
                    </div>

                    <div class="card">
                        {{#with efficiency}}
                            <div class="display-4">
                                {{title}}
                            </div>

                            <div>
                                <h6>{{sub_title}}</h6>
                            </div>

                            <div>
                                <p>{{description}}</p>
                            </div>

                            <div>
                                <button type="button" class="btn btn-outline-warning">{{button}}</button>
                            </div>
                        {{/with}}
                    </div>
                </div>
            </div>


            <div class="card">
                    <div class="cadr-bode">
                    {{#with innovation}}
                        <div class="display-4 text-center">
                            {{title}}
                        </div>

                        <div class="text-center">
                            <h6>{{sub_title}}</h6>
                        </div>

                        <div class="text-center">
                            <p>{{description}}</p>
                        </div>

                        <div>
                            <button type="button" class="btn btn-outline-warning">{{button}}</button>            
                        </div>
                    {{/with}}
                </div>
            </div>


            <div class="card">
                    <div class="card-body">
                    {{#with collaboration}}
                        <div class="display-4 text-end">
                            {{title}}
                        </div>

                        <div class="text-end">
                            <h6>{{sub_title}}</h6>
                        </div>

                        <div class="text-end">
                            <p>{{description}}</p>
                        </div>

                        <div>
                            <button type="button" class="btn btn-outline-warning">{{button}}</button>            
                        </div>
                    {{/with}}
                </div>
            </div>
        {{/with}}


        <div class="card">
            <div class="card-body">
                {{#with agreement}}
                    <div class="display-5">
                        {{title}}
                    </div>

                    <div class="card">
                        {{#with info}}
                            <div>
                                <h5>{{sub_title}}</h5>
                            </div>

                            {{#with detail}}
                                <div class="card">
                                    <div>
                                        <p>{{text}}</p>

                                        <div>
                                            <button type="button" class="btn btn-outline-success">{{button}}</button>
                                        </div>
                                    </div>
                                </div>
                            {{/with}}
                        {{/with}}
                    </div>
                {{/with}}
            </div>
        </div>
    {{/with}}
</main>